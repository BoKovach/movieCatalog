<form method="post" action='{{#if isEdit}}/{{currentMovie.title}}/details/edit{{else}}/add-movie{{/if}}'>
  <div class="mb-3">
    <label for="movie-genre" class="form-label">Movie Genre</label>
    {{#if isEdit}}
    <input type="text" class="form-control" id="movie-genre", name="genre"
    value="{{currentMovie.genre}}" readonly>
    {{else}} 
    <select class="form-control" id="movie-genre" name="genre" required>
      <option value="">Select Genre</option>
      <option value="Action">Action</option>
      <option value="Drama">Drama</option>
      <option value="Science Fiction">Science Fiction</option>
      <option value="Fantasy">Fantasy</option>
      <option value="Horror">Horror</option>
      <option value="Comedy">Comedy</option>
    </select>
    {{/if}}
  </div>
  <div class="mb-3">
    <label for="movie-title" class="form-label">Movie Name</label>
    <input type="text" class="form-control" id="movie-title" name="title" value="{{currentMovie.title}}" {{#if
      isEdit}}readonly{{/if}} required>
  </div>
  <div class="mb-3">
    <label for="movie-year" class="form-label">Movie Year</label>
    <input type="number" class="form-control" id="movie-year" name="year" value="{{currentMovie.year}}" {{#if
      isEdit}}readonly{{/if}} required>
  </div>
  <div class="mb-3">
    <label for="movie-img" class="form-label">Movie Image</label>
    <input type="url" class="form-control" id="movie-image" name="image" 
    {{#if isEdit}} value="{{currentMovie.image}}" {{else}} placeholder="Enter image URL" {{/if}}required>
  </div>
  <div class="mb-3">
    <label for="movie-imdb" class="form-label">IMDB Link</label>
    <input type="url" class="form-control" id="movie-image" name="imdb"
    {{#if isEdit}} value="{{currentMovie.imdb}}" {{else}} placeholder="Enter image URL" {{/if}} required>
  </div>
  <div class="mb-3">
    <label for="movie-description" class="form-label">Description</label>
    <textarea class="form-control" id="movie-description" name="description" rows="3"
    {{#if isEdit}} value="{{currentMovie.description}}" {{else}} placeholder="Enter image URL" {{/if}} required></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>